# Defaults
prompt="󰯜 Screen recorder:"
BEMENU_OPTS="$BEMENU_OPTS -p '$prompt'"

# List of choices
list_choices(){
	cat << EOF
󰑊 Start recording
󰓛 Stop recording
EOF
}

# Command
choice=$(list_choices | bemenu)

case "$choice" in
  	"󰑊 Start recording") screenrec ;;
  	"󰓛 Stop recording") pkill -INT ffmpeg ;;
esac



# vim: ft=sh
