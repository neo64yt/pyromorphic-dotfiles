# Managing sessions

# Defaults
set -x
prompt="󰐦 System"
message="󰞌 Uptime: $(uptime -p | sed 's/up //g')"

# List of choices
poweroff="󰐥 Power off"
reboot="󰜉 Restart"
sleep="󰤄 Sleep"
hibernate="󰽢 Hibernate"
lockscr="󰍁 Lock"
logout="󰍃 Exit session"


yes="󰄬 Proceed"
no="󰜺 Cancel"


# Ask for confirmation
confirm_exit() {
    sleep 1
	echo "$yes\n$no" | rofi -theme confirmask -dmenu -p "󰘥 Confirmation" -mesg "$chosen" -l 1  
}

# Pass variables to rofi dmenu
run_rofi() {
	echo "$poweroff\n$reboot\n$sleep\n$hibernate\n$lockscr\n$logout" | rofi -theme sessionmgr -dmenu -p "$prompt" -mesg "$message" -l 2
}

# Execute command
run_cmd() {
	selected="$(confirm_exit)"
	if [ "$selected" = "$yes" ]; then
		case "$1" in 
            "--shutdown") sudo poweroff ;;
            "--reboot") sudo reboot ;;
            "--sleep") loginctl suspend ;;
            "--hibernate") loginctl hibernate ;;
            "--logout") ${XDG_CONFIG_HOME}/${XDG_CURRENT_DESKTOP}/exit-session ;;
        esac
	else
		exit 0
	fi
}

# Actions
chosen="$(run_rofi)"
case ${chosen} in
    "$poweroff") run_cmd --shutdown ;;
    "$reboot") run_cmd --reboot ;;
    "$sleep") run_cmd --sleep ;;
    "$hibernate") run_cmd --hibernate ;;
    "$lockscr")
		 case "$XDG_SESSION_TYPE" in
             "x11") xscreensaver-command -lock ;;
             "wayland") swaylock -f ;;
         esac
        ;;
    "$logout") run_cmd --logout ;;
esac



# vim: ft=sh
